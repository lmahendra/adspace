<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Slot name</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Min amount</th>
      <th>Bid start</th>
      <th>Bid end</th>
      <th>Winner bid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td></td>
        <td><%= slot.slot_name %></td>
        <td><%= slot.description %></td>
        <td><%= slot.start_time.strftime('%l: %M %p') %></td>
        <td><%= slot.end_time.strftime('%l: %M %p') %></td>
        <td><%= slot.min_amount %></td>
        <td><%= slot.bid_start.strftime('%d/%m/%Y') %></td>
        <td><%= slot.bid_end.strftime('%d/%m/%Y') %></td>
        <td><% if slot.winner_bid.present? %>
           <%= slot.bids.last.try(:amount) %> <span class="small"> by <%= slot.bids.last.try(:user).try(:full_name) %> </span>
           <% end %>
         </td>
        <td><%= slot.status_text %></td>
        <td><%= link_to 'Show', slot %></td>
        <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
        <td><%= link_to 'Destroy', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

